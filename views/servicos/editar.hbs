<main>
  <div class='content-header'>
    <div class='container-fluid'>
      <h1>Editar serviço</h1>
    </div>
  </div>
  <div class='content'>
    <div class='container-fluid'>
      <form
        action='/admin/servicos/{{servico.id}}/edit?_method=PATCH'
        method='post'
      >
        <div class='card'>
          <div class='card-body'>
            <fieldset>
              <legend>Identificação</legend>
              <div class='row'>
                <div class='col-lg-12'>
                  <div class='col-lg-3'>
                    <div class='{{alert}}'>
                      <p>{{{message}}}</p>
                    </div>
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='nome'>Nome</label>
                    <input
                      type='text'
                      name='nome'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.nome}}{{^}}{{servico.nome}}{{/if}}'
                      placeholder='Nome do serviço'
                    />
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='icone'>Ícone</label>
                    <select name='icone' id='icone' class='form-control'>
                      <option value='{{#if message}}{{oldData.0.icone}}{{^}}{{servico.icone}}{{/if}}'>
                      {{#if message}}{{oldData.0.icone}}{{^}}{{servico.icone}}{{/if}}
                      </option>
                      <option value='twf-cleaning-1'>Ícone 1</option>
                      <option value='twf-cleaning-2'>Ícone 2</option>
                      <option value='twf-cleaning-3'>Ícone 3</option>
                    </select>
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='posicao'>Posição na plataforma</label>
                    <input
                      type='text'
                      name='posicao'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.posicao}}{{^}}{{servico.posicao}}{{/if}}'
                      placeholder='Posição do serviço na plataforma'
                      data-mask="00"
                          required
                    />
                  </div>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>Globais</legend>
              <div class='row'>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='valorMinimo'>Valor mínimo</label>
                    <input
                      type='text'
                      name='valorMinimo'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.valorMinimo}}{{^}}{{servico.valorMonimo}}{{/if}}'
                      placeholder='Valor mínimo do serviço'
                      data-mask="#.##0,00"
                          data-mask-reverse="true"
                          required
                    />
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='quantidadeHoras'>Quantidade mínima de horas</label>
                    <input
                      type='number'
                      name='quantidadeHoras'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.quantidadeHoras}}{{^}}{{servico.quantidadeHoras}}{{/if}}'
                      placeholder='Quantidade mínima de horas'
                      data-mask="0"
                          required
                    />
                  </div>
                </div>
                <div class='col-md-4'>
                  <div class='form-group'>
                    <label for='porcentagem'>Porcentagem da comissão</label>
                    <input
                      type='text'
                      name='porcentagem'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.porcentagem}}{{^}}{{servico.porcentagem}}{{/if}}'
                      placeholder='Porcentagem da comissão'
                      data-mask="000"
                          required
                    />
                  </div>
                </div>
              </div>
            </fieldset>
            <fieldset>
              <legend>Cômodos</legend>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorQuarto'>Valor por quarto</label>
                    <input
                      type='number'
                      name='valorQuarto'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.valorQuarto}}{{^}}{{servico.valorQuarto}}{{/if}}'
                      placeholder='Valor por quarto'
                      data-mask="#.##0,00"
                          data-mask-reverse="true"
                          required
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasQuarto'>Quantidade de horas por quarto</label>
                    <input
                      type='number'
                      name='horasQuarto'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.horasQuarto}}{{^}}{{servico.horasQuarto}}{{/if}}'
                      placeholder='Quantidade de horas por quarto'
                      data-mask="0"
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorSala'>Valor por sala</label>
                    <input
                      type='number'
                      name='valorSala'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.valorSala}}{{^}}{{servico.valorSala}}{{/if}} '
                     placeholder='Quantidade Valor por sala'
                     data-mask="#.##0,00"
                          data-mask-reverse="true"
                          required
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasSala'>Quantidade de horas por sala</label>
                    <input
                      type='number'
                      name='horasSala'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.horasSala}}{{^}}{{servico.horasSala}}{{/if}} '
                     placeholder='Quantidade de horas por sala'
                     data-mask="0"
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorBanheiro'>Valor por banheiro</label>
                    <input
                      type='number'
                      name='valorBanheiro'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.valorBanheiro}}{{^}}{{servico.valorBanheiro}}{{/if}}'
                      placeholder='Quantidade Valor por banheiro'
                      data-mask="#.##0,00"
                          data-mask-reverse="true"
                          required
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasBanheiro'>Quantidade de horas por banheiro</label>
                    <input
                      type='number'
                      name='horasBanheiro'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.horasBanheiro}}{{^}}{{servico.horasBanheiro}}{{/if}}'
                      placeholder='Quantidade de horas por banheiro'
                      data-mask="0"
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorCozinha'>Valor por cozinha</label>
                    <input
                      type='number'
                      name='valorCozinha'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.valorCozinha}}{{^}}{{servico.valorCozinha}}{{/if}}'
                      placeholder='Quantidade Valor por cozinha'
                      data-mask="#.##0,00"
                          data-mask-reverse="true"
                          required
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasCozinha'>Quantidade de horas por cozinha</label>
                    <input
                      type='number'
                      name='horasCozinha'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.horasCozinha}}{{^}}{{servico.horasCozinha}}{{/if}}'
                      placeholder='Quantidade de horas por cozinha'
                      data-mask="0"
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorQuintal'>Valor por quintal</label>
                    <input
                      type='number'
                      name='valorQuintal'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.valorQuintal}}{{^}}{{servico.valorQuintal}}{{/if}}'
                      placeholder='Quantidade Valor por quintal'
                      data-mask="#.##0,00"
                          data-mask-reverse="true"
                          required
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasQuintal'>Quantidade de horas por quintal</label>
                    <input
                      type='number'
                      name='horasQuintal'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.horasQuintal}}{{^}}{{servico.horasQuintal}}{{/if}}'
                      placeholder='Quantidade de horas por quintal'
                      data-mask="0"
                          required
                    />
                  </div>
                </div>
              </div>
              <div class='row'>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='valorOutros'>Valor por outros tipos de cômodos</label>
                    <input
                      type='number'
                      name='valorOutros'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.valorOutros}}{{^}}{{servico.valorOutros}}{{/if}}'
                      placeholder='Quantidade Valor por outros tipos de cômodos'
                      data-mask="#.##0,00"
                          data-mask-reverse="true"
                          required
                    />
                  </div>
                </div>
                <div class='col-md-6'>
                  <div class='form-group'>
                    <label for='horasOutros'>Quantidade de horas por outros
                      tipos de cômodos</label>
                    <input
                      type='number'
                      name='horasOutros'
                      class='form-control'
                      value='{{#if message}}{{oldData.0.horasOutros}}{{^}}{{servico.horasOutros}}{{/if}}'
                      placeholder='Quantidade de horas por outros tipos de cômodos'
                      data-mask="0"
                          required
                    />
                  </div>
                </div>
              </div>
            </fieldset>
            <div class='row'>
              <div class='col-md-4'>
                <div class='form-group'>
                  <button class='btn btn-primary' type='submit'>Salvar</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</main>